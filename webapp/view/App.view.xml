<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc" controllerName="Walkthrough.controller.App" displayBlock="true">
	<App id="__app0"  class="myAppDemoWT">
	    <pages>
	        <Page title="{i18n>homePageTitle}" id="__page0">
	        	<content>
	        		<Panel id="__panel1" class="sapUiResponsiveMargin" width="auto">
	        			<content>
	        		<Button text="{i18n>showHelloButtonText}" press="onShowHello" class="myCustomButton"/>
					<Input width="60%" id="__input0" fieldWidth="60%" value="{/recipient/name}" valueLiveUpdate="true"/>
	        			<FormattedText htmlText="Hello {/recipient/name}" class="sapUiSmallMargin sapThemeHighlight-asColor myCustomText"/>
	        			</content>
	        		</Panel>
	        	</content>
	        </Page>
	    </pages>
	</App>
	
</mvc:View>